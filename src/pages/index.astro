---
import { Image } from "astro:assets";
import "../styles/global.css";

import robertSrc from "./robert.jpeg";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Robert Broersma</title>
    <meta
      name="description"
      content="Robert Broersma — Web developer based in Utrecht. Currently building things at Wolk."
    />
    {
      import.meta.env.PROD && (
        <script
          is:inline
          defer
          src="https://cloud.umami.is/script.js"
          data-website-id="308551df-872d-4c5a-ae9d-2f22b2322fcc"
        />
      )
    }
  </head>

  <body>
    <div class="min-h-dvh flex flex-col">
      <!-- ══════════ Main Content ══════════ -->
      <main
        class="flex-1 flex items-center justify-center px-6 sm:px-10 py-10 sm:py-16"
      >
        <div class="w-full max-w-240">
          <!-- 2-column grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-10 md:gap-16">
            <!-- ── LEFT COLUMN: Intro + Links ── -->
            <div class="flex flex-col justify-center gap-6 order-2 md:order-1">
              <!-- Greeting -->
              <p
                class="font-body font-medium text-base text-ink-light tracking-normal fade-up delay-1"
              >
                Hi! My name is Robert.
              </p>

              <!-- Big title -->
              <h1 class="text-5xl sm:text-6xl fade-up delay-2">
                I build software for humans<span class="text-yellow">.</span>
              </h1>

              <!-- Bio -->
              <p
                class="text-[1.05rem] leading-[1.7] text-ink-light max-w-[38ch] fade-up delay-3"
              >
                Software developer based in
                <strong class="text-ink font-semibold">Utrecht</strong>,
                currently building things at
                <a
                  href="https://wolk.work"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="font-semibold text-ink underline decoration-wavy decoration-hot-pink underline-offset-[3px] hover:decoration-ink transition-colors duration-200"
                  >Wolk</a
                >. When I'm not writing code, I also make music.
              </p>

              <!-- Pill buttons -->
              <div class="flex flex-wrap gap-3 fade-up delay-4">
                <a
                  href="https://wolk.work"
                  target="_blank"
                  class="group inline-flex items-center gap-3 py-3.5 px-6 border-[2.5px] border-ink rounded-lg font-body font-bold text-base cursor-pointer no-underline text-ink shadow-brutal whitespace-nowrap relative leading-tight bg-yellow transition-all duration-150 ease-bounce hover:-translate-x-0.5 hover:-translate-y-0.5 hover:shadow-brutal-hover active:translate-x-0.5 active:translate-y-0.5 active:shadow-brutal-active"
                >
                  Wolk.work
                </a>

                <a
                  href="https://soundcloud.com/robertbroersma"
                  target="_blank"
                  class="group inline-flex items-center gap-3 py-3.5 px-6 border-[2.5px] border-ink rounded-md font-body font-bold text-base cursor-pointer no-underline text-ink shadow-brutal whitespace-nowrap relative leading-tight bg-orange-light transition-all duration-150 ease-bounce hover:-translate-x-0.5 hover:-translate-y-0.5 hover:shadow-brutal-hover active:translate-x-0.5 active:translate-y-0.5 active:shadow-brutal-active"
                >
                  SoundCloud
                </a>
              </div>
            </div>

            <!-- ── RIGHT COLUMN: Photo ── -->
            <div
              class="flex items-center justify-center order-1 md:order-2 fade-up delay-5"
            >
              <div
                class="relative flex items-center justify-center w-full max-w-80 aspect-5/6"
              >
                <!-- Photo placeholder -->
                <div
                  class="relative z-1 w-[280px] h-[340px] border-[2.5px] border-ink overflow-hidden flex items-center justify-center bg-white rounded-xl shadow-brutal"
                >
                  <Image
                    src={robertSrc}
                    alt="It's me! Robert"
                    width={560}
                    class="object-top"
                    sizes="280px"
                  />
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>

      <!-- ══════════ Footer ══════════ -->
      <footer
        class="flex flex-col items-center gap-5 pb-8 px-5 fade-up delay-7"
      >
        <!-- Social links -->
        <div class="flex items-center gap-1">
          <!-- LinkedIn -->
          <a
            href="https://www.linkedin.com/in/robert-broersma/"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center w-10 h-10 rounded-lg text-ink-light cursor-pointer transition-all duration-200 ease-bounce hover:text-ink hover:-translate-y-0.5"
            aria-label="LinkedIn"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              ></path>
            </svg>
          </a>

          <span class="text-ink-muted text-xs select-none">&bull;</span>

          <!-- GitHub -->
          <a
            href="https://github.com/robertbroersma"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center w-10 h-10 rounded-lg text-ink-light cursor-pointer transition-all duration-200 ease-bounce hover:text-ink hover:-translate-y-0.5"
            aria-label="GitHub"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path
                d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"
              ></path>
            </svg>
          </a>
        </div>

        <p class="text-xs tracking-wide text-ink-muted font-body uppercase">
          Robert Broersma
        </p>
      </footer>
    </div>
  </body>
</html>
